= form_for @cuenta do |f|
  -if @cuenta.errors.any?
    #error_explanation
      %h2= "#{pluralize(@cuenta.errors.count, "error")} prohibited this cuenta from being saved:"
      %ul
        - @cuenta.errors.full_messages.each do |msg|
          %li= msg
  %fieldset.datos_personales
    %legend Datos Personales
    .field
      = f.label :nombre, :class => "label"
      = f.text_field :nombre, :size => "20"
    .field
      = f.label :apellido, :class => "label"
      = f.text_field :apellido, :size => "20"
    .field
      = f.label :nif, :class => "label"
      = f.text_field :nif, :size => "20"
    .field
      = f.label :direccion, :class => "label"
      = f.text_field :direccion, :size => "20"
    .field
      = f.label :ciudad, :class => "label"
      = f.text_field :ciudad, :size => "20"
    .field
      = f.label :codigo, :class => "label"
      = f.number_field :codigo, :size => "20"
    .field
      = f.label :telefono, :class => "label"
      = f.number_field :telefono, :size => "20"
    .field
      = f.label :provincia, :class => "label"
      = f.select( :provincia,['Castellon','Valencia','Alicante','Otras'], :include_blank =>true)
      -#= f.select :provincia, %w{CastellÃ³n Valencia Alicante}
  %fieldset.datos_cuenta
    %legend Datos Acceso
    .field
      = f.label :email, :class => "label"
      = f.text_field :email, :size => "20"
    .field
      = f.label :password, :class => "label"
      = f.password_field :password, :size => "20"
    .field
      = f.label :password_confirmation, :class => "label"
      = f.password_field :password_confirmation, :size => "20"
    .field
      =f.label :administrador
      =f.select( :administrador ,[['No', 0 ],['Si', 1]])

  .actions
    = f.submit 'Save'
    = link_to 'Back', cuentas_path

