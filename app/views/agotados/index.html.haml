  -@agotados.each do |agotado|
    %tr
      %td= link_to agotado.titulo,agotado
      %td= agotado.autor
      %td= agotado.categoria_nombre
      %td= l(agotado.fecha_disponible, :format=>"%d/%m/%Y")
